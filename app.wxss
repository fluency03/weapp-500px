/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /*padding: 200rpx 0;*/
  box-sizing: border-box;
}

.topic-owner {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
  margin-left: 10rpx;
}

.owner-avatar {
  width: 80rpx;
  height: 80rpx;
  left: 10rpx;
  margin-right: 20rpx;
  border-radius: 100%;
}

.topic-created {
  margin-left: 30rpx;
  font-size:14px;
  color:#999;
}

.topic-tit {
  flex:1;
  box-sizing:border-box;
  padding-right:10rpx;
  line-height: 1.4;
  font-size:14px;
  color:#333;
}

.topic-info {
  margin-bottom: 40rpx;
  color:#777;
}

.topic-desc {
  width: 700rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  line-height: 1.4;
  word-wrap: break-word;
  word-break: normal;
  font-size:14px;
  color:#333;
  /*border-top:1px solid #ddd;*/
}

.topic-tags {
  width: 700rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-bottom: 20rpx;
  line-height: 1.4;
  word-wrap: break-word;
  word-break: normal;
  font-size:14px;
  color:#999;
}

.replies {
  width: 730rpx;
  border-top:1px solid #ddd;
}

.replies-item {
  padding:10rpx 0 10rpx 20rpx;
  border-bottom:1px solid #eee;
}

.reply-owner {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.reply-avatar {
  width:60rpx;
  height:60rpx;
  border-radius:100%;
  margin-right:30rpx;
}

.reply-name, .reply-time, .reply-content {
  font-size:14px;
  color:#999;
}

.reply-time {
  margin-left: 30rpx;
  color:#ccc;
}

.reply-content {
  padding-left: 20rpx;
  padding-right: 20rpx;
  line-height:1.4;
  word-wrap: break-word;
  word-break: normal;
  color:#999;
  margin-bottom: 5rpx;
}

.photo-list{
  width:100%;
  display:flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
}

